---
layout: null
---

<?xml version="1.0" encoding="UTF-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title type="html">{{ site.title | xml_escape }}</title>
  <subtitle>{{ site.description | xml_escape }}</subtitle>
  <link href="{{ site.baseurl }}/feed.xml" rel="self" type="application/atom+xml"/>
  <link href="{{ site.baseurl }}/" rel="alternate" type="text/html"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ site.baseurl }}/feed.xml</id>
  <generator uri="https://jekyllrb.com/" version="{{ jekyll.version }}">Jekyll</generator>

  {% for post in site.posts limit:10 %}
  <entry>
    <title type="html">{{ post.title | xml_escape }}</title>
    <link href="{{ post.url | prepend: site.baseurl }}" rel="alternate" type="text/html" title="{{ post.title | xml_escape }}"/>
    <published>{{ post.date | date_to_xmlschema }}</published>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <id>{{ post.url | prepend: site.baseurl }}</id>

    <summary type="html">
      <![CDATA[{{ post.excerpt | xml_escape }}]]>
    </summary>

    <content type="html" xml:base="{{ post.url | prepend: site.baseurl }}">
      <![CDATA[{{ post.content | xml_escape }}]]>
    </content>

    {% if post.image %}
    <media:thumbnail xmlns:media="http://search.yahoo.com/mrss/" url="{{ post.image | prepend: site.baseurl }}"/>
    <media:content xmlns:media="http://search.yahoo.com/mrss/" medium="image" url="{{ post.image | prepend: site.baseurl }}"/>
    {% endif %}

    <author>
      <name>{{ post.author | default: site.author }}</name>
    </author>

    {% for tag in post.tags %}
      <category term="{{ tag | xml_escape }}"/>
    {% endfor %}
    {% for cat in post.categories %}
      <category term="{{ cat | xml_escape }}"/>
    {% endfor %}
  </entry>
  {% endfor %}
</feed>
