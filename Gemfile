source "https://rubygems.org"

# Specify the Jekyll version you want to use
gem 'jekyll', '>= 4.2.0' # Adjust this to the version you need

# Windows specific dependency
gem 'wdm', '>= 0.1.0' if Gem.win_platform?

# Jekyll Plugins
group :jekyll_plugins do
  gem 'jekyll-feed'        # Adds an RSS feed
  gem 'jekyll-sitemap'     # Generates a sitemap.xml
  gem 'jekyll-paginate'    # Pagination for posts
  gem 'jekyll-seo-tag'     # SEO tags for improved visibility
  gem 'jekyll-archives'     # Archive pages for posts
  gem 'kramdown'           # Markdown parsing
  gem 'rouge'              # Syntax highlighting
end
